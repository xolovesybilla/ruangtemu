                            <i class="fas fa-credit-card"></i> Bayar Tagihan Sekarang
                        </button>
                    </div>
                </div>
                
                <!-- RIWAYAT TAGIHAN -->
                <h3 class="section-title" style="margin-top: 40px;">Riwayat Tagihan</h3>
                <table class="orders-table">
                    <thead>
                        <tr>
                            <th>Bulan</th>
                            <th>Total Penjualan</th>
                            <th>Komisi (5%)</th>
                            <th>Status</th>
                            <th>Tanggal Bayar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>November 2024</td>
                            <td>Rp 7.2M</td>
                            <td>Rp 360,000</td>
                            <td><span class="order-status status-confirmed">Lunas</span></td>
                            <td>10 Des 2024</td>
                        </tr>
                        <tr>
                            <td>Oktober 2024</td>
                            <td>Rp 6.8M</td>
                            <td>Rp 340,000</td>
                            <td><span class="order-status status-confirmed">Lunas</span></td>
                            <td>12 Nov 2024</td>
                        </tr>
                        <tr>
                            <td>September 2024</td>
                            <td>Rp 6.5M</td>
                            <td>Rp 325,000</td>
                            <td><span class="order-status status-confirmed">Lunas</span></td>
                            <td>10 Okt 2024</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // üë§ LOAD USER DATA
            const currentUser = JSON.parse(localStorage.getItem('currentUser') || '{}');
            const userName = document.getElementById('userName');
            
            if (currentUser.username) {
                const name = currentUser.username.charAt(0).toUpperCase() + currentUser.username.slice(1);
                userName.textContent = name;
            }

            // üì± MOBILE MENU TOGGLE
            const menuToggle = document.getElementById('menuToggle');
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('overlay');

            menuToggle.addEventListener('click', function() {
                sidebar.classList.toggle('active');
                overlay.classList.toggle('show');
                this.innerHTML = sidebar.classList.contains('active') 
                    ? '<i class="fas fa-times"></i>' 
                    : '<i class="fas fa-bars"></i>';
            });

            overlay.addEventListener('click', function() {
                sidebar.classList.remove('active');
                overlay.classList.remove('show');
                menuToggle.innerHTML = '<i class="fas fa-bars"></i>';
            });

            // üé™ TAB NAVIGATION
            const navItems = document.querySelectorAll('.nav-item');
            const tabContents = document.querySelectorAll('.tab-content');
            
            navItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    const tabId = this.getAttribute('data-tab');
                    
                    // Update active nav item
                    navItems.forEach(nav => nav.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Show target tab
                    tabContents.forEach(tab => {
                        tab.classList.remove('active');
                        if (tab.id === `${tabId}-tab`) {
                            tab.classList.add('active');
                        }
                    });
                });
            });

            // üìä CHART PERIOD SELECTION
            const periodBtns = document.querySelectorAll('.period-btn');
            periodBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    periodBtns.forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    const period = this.getAttribute('data-period');
                    showToast(`Menampilkan data ${period}`, 'pink');
                });
            });

            // üìã ORDER MANAGEMENT
            // Accept Order
            document.querySelectorAll('.accept-order').forEach(btn => {
                btn.addEventListener('click', function() {
                    const row = this.closest('tr');
                    const orderCode = row.cells[0].textContent;
                    const customer = row.cells[1].textContent;
                    
                    row.cells[4].innerHTML = '<span class="order-status status-confirmed">Dikonfirmasi</span>';
                    
                    // Update actions
                    const actionsCell = row.cells[5];
                    actionsCell.innerHTML = `
                        <div class="action-buttons">
                            <button class="btn btn-primary btn-sm prepare-order">
                                <i class="fas fa-utensils"></i> Siapkan
                            </button>
                        </div>
                    `;
                    
                    showToast(`Pesanan ${orderCode} dari ${customer} berhasil diterima!`, 'green');
                    
                    // Re-attach event listener
                    actionsCell.querySelector('.prepare-order').addEventListener('click', prepareOrderHandler);
                });
            });

            // Reject Order
            document.querySelectorAll('.reject-order').forEach(btn => {
                btn.addEventListener('click', function() {
                    const row = this.closest('tr');
                    const orderCode = row.cells[0].textContent;
                    
                    if (confirm(`Tolak pesanan ${orderCode}?`)) {
                        row.cells[4].innerHTML = '<span class="order-status status-cancelled">Ditolak</span>';
                        
                        // Update actions
                        const actionsCell = row.cells[5];
                        actionsCell.innerHTML = '<span style="color: var(--gray-medium);">Pesanan ditolak</span>';
                        
                        showToast(`Pesanan ${orderCode} berhasil ditolak`, 'gray');
                    }
                });
            });

            // Prepare Order Handler
            function prepareOrderHandler() {
                const row = this.closest('tr');
                const orderCode = row.cells[0].textContent;
                
                row.cells[4].innerHTML = '<span class="order-status status-preparing">Disiapkan</span>';
                
                // Update actions
                const actionsCell = row.cells[5];
                actionsCell.innerHTML = `
                    <div class="action-buttons">
                        <button class="btn btn-secondary btn-sm ready-order">
                            <i class="fas fa-check-circle"></i> Selesai
                        </button>
                    </div>
                `;
                
                showToast(`Memulai persiapan pesanan ${orderCode}`, 'pink');
                
                // Re-attach event listener
                actionsCell.querySelector('.ready-order').addEventListener('click', readyOrderHandler);
            }

            // Ready Order Handler
            function readyOrderHandler() {
                const row = this.closest('tr');
                const orderCode = row.cells[0].textContent;
                
                row.cells[4].innerHTML = '<span class="order-status status-ready">Siap Diambil</span>';
                
                // Update actions
                const actionsCell = row.cells[5];
                actionsCell.innerHTML = `
                    <div class="action-buttons">
                        <button class="btn btn-secondary btn-sm complete-order">
                            <i class="fas fa-clipboard-check"></i> Selesai
                        </button>
                    </div>
                `;
                
                showToast(`Pesanan ${orderCode} siap diambil pelanggan!`, 'green');
                
                // Re-attach event listener
                actionsCell.querySelector('.complete-order').addEventListener('click', completeOrderHandler);
            }

            // Complete Order Handler
            function completeOrderHandler() {
                const row = this.closest('tr');
                const orderCode = row.cells[0].textContent;
                
                row.cells[4].innerHTML = '<span class="order-status status-completed">Selesai</span>';
                
                // Update actions
                const actionsCell = row.cells[5];
                actionsCell.innerHTML = '<span style="color: var(--green-vibrant); font-weight: 600;">‚úì Pesanan selesai</span>';
                
                showToast(`Pesanan ${orderCode} telah selesai!`, 'green');
            }

            // Attach initial event listeners
            document.querySelectorAll('.prepare-order').forEach(btn => {
                btn.addEventListener('click', prepareOrderHandler);
            });

            document.querySelectorAll('.ready-order').forEach(btn => {
                btn.addEventListener('click', readyOrderHandler);
            });

            document.querySelectorAll('.complete-order').forEach(btn => {
                btn.addEventListener('click', completeOrderHandler);
            });

            // üçΩÔ∏è MENU MANAGEMENT
            // Add Menu
            document.getElementById('addMenuBtn').addEventListener('click', function() {
                showToast('Membuka form tambah menu baru', 'pink');
                // Implement form modal untuk tambah menu
            });

            // Edit Menu
            document.querySelectorAll('.edit-menu').forEach(btn => {
                btn.addEventListener('click', function() {
                    const menuName = this.closest('.menu-item').querySelector('.menu-name').textContent;
                    showToast(`Mengedit menu: ${menuName}`, 'pink');
                });
            });

            // Delete Menu
            document.querySelectorAll('.delete-menu').forEach(btn => {
                btn.addEventListener('click', function() {
                    const menuName = this.closest('.menu-item').querySelector('.menu-name').textContent;
                    if (confirm(`Hapus menu "${menuName}"?`)) {
                        const menuItem = this.closest('.menu-item');
                        menuItem.style.opacity = '0';
                        menuItem.style.transform = 'translateX(20px)';
                        setTimeout(() => {
                            menuItem.remove();
                            showToast(`Menu "${menuName}" berhasil dihapus`, 'gray');
                        }, 300);
                    }
                });
            });

            // üí∞ PAY BILL
            document.getElementById('payBillBtn').addEventListener('click', function() {
                if (confirm('Bayar tagihan sebesar Rp 425,000 untuk bulan Desember 2024?')) {
                    showToast('Mengarahkan ke halaman pembayaran...', 'green');
                    setTimeout(() => {
                        window.location.href = 'successpayment.html';
                    }, 1000);
                }
            });

            // üîç SEARCH FUNCTIONALITY
            const searchInput = document.getElementById('searchInput');
            let searchTimeout;
            
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    if (this.value.trim().length > 0) {
                        showToast(`Mencari: ${this.value}`, 'pink');
                    }
                }, 500);
            });

            // üë§ LOGOUT BUTTON
            const logoutBtn = document.querySelector('.logout-btn');
            logoutBtn.addEventListener('click', function() {
                if (confirm('Yakin ingin keluar dari akun?')) {
                    showToast('Sedang keluar...', 'pink');
                    
                    // Hapus data user dari localStorage
                    localStorage.removeItem('currentUser');
                    
                    setTimeout(() => {
                        window.location.href = 'register.html';
                    }, 1000);
                }
            });

            // üé≠ TOAST FUNCTION
            function showToast(message, type = 'pink') {
                const toast = document.getElementById('toast');
                const toastTitle = document.getElementById('toastTitle');
                const toastMessage = document.getElementById('toastMessage');
                
                // Set judul berdasarkan tipe
                const titles = {
                    'pink': 'Berhasil!',
                    'green': 'Informasi',
                    'gray': 'Notifikasi'
                };
                
                toastTitle.textContent = titles[type] || 'Notifikasi';
                toastMessage.textContent = message;
                
                // Update class untuk tipe
                toast.className = 'toast';
                toast.classList.add(type);
                
                // Show toast
                setTimeout(() => {
                    toast.classList.add('show');
                }, 10);
                
                // Hide toast after 3 seconds
                setTimeout(() => {
                    toast.classList.remove('show');
                }, 3000);
            }

            // üåü INITIAL TOAST
            if (currentUser.username) {
                const name = currentUser.username.charAt(0).toUpperCase() + currentUser.username.slice(1);
                setTimeout(() => {
                    showToast(`Selamat datang, ${name}! Selamat mengelola Hara Cafe`, 'pink');
                }, 1000);
            }

            // üéØ KEYBOARD SHORTCUTS
            document.addEventListener('keydown', function(e) {
                // Ctrl + / untuk fokus search
                if (e.ctrlKey && e.key === '/') {
                    e.preventDefault();
                    searchInput.focus();
                }
                
                // Escape untuk menutup sidebar
                if (e.key === 'Escape') {
                    sidebar.classList.remove('active');
                    overlay.classList.remove('show');
                    menuToggle.innerHTML = '<i class="fas fa-bars"></i>';
                }
                
                // Number keys untuk navigasi tab
                if (e.key >= '1' && e.key <= '6') {
                    const index = parseInt(e.key) - 1;
                    const navItemsArray = Array.from(navItems);
                    if (navItemsArray[index]) {
                        navItemsArray[index].click();
                    }
                }
            });

            // üìä LOAD BILLING DATA
            function loadBillingData() {
                // Simulasikan data tagihan dari API
                const billingData = {
                    currentMonth: 'Desember 2024',
                    totalSales: 8500000,
                    commissionRate: 0.05,
                    dueDate: '15 Des 2024',
                    status: 'unpaid'
                };
                
                // Update UI dengan data
                const commission = billingData.totalSales * billingData.commissionRate;
                
                // Format dengan thousand separator
                const formatRupiah = (number) => {
                    return 'Rp ' + number.toFixed(0).replace(/\B(?=(\d{3})+(?!\d))/g, '.');
                };
                
                // Update nilai di halaman
                document.querySelector('.billing-header h3').textContent = `Tagihan ${billingData.currentMonth}`;
                document.querySelectorAll('.detail-card .detail-value')[0].textContent = formatRupiah(billingData.totalSales);
                document.querySelectorAll('.detail-card .detail-value')[2].textContent = formatRupiah(commission);
            }
            
            loadBillingData();
        });
    </script>
</body>
</html>
